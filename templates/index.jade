extends layout

block content
  include author
  each article in articles
    article.article.intro
      header
        p.date
          span= moment.utc(article.date).format('DD. MMMM YYYY')
        h2
          a(href=article.url)= article.title
      section.content
        !{ typogr(article.intro).typogrify() }
        if article.hasMore
          p.more
            a(href=article.url) more

block prepend footer
  div.nav
    if prevPage
      a(href=prevPage.url) <i class="fa fa-chevron-circle-left"></i> Newer
    else
      a(href='/archive.html') <i class="fa fa-chevron-circle-left"></i> Archives
    if nextPage
      a(href=nextPage.url) Next <i class="fa fa-chevron-circle-right"></i>


